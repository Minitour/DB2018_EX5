<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import ui.UIView?>
<?import com.jfoenix.controls.JFXButton?>
<fx:root type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        stylesheets="@../../ui/res/css/styles.css"
        prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="8">
        <Label text="Account Details">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <VBox spacing="10">


            <Label fx:id="hospital">Hospital Name</Label>

            <Label fx:id="role">Role Type</Label>

            <JFXTextField fx:id="email" promptText="Email" />

            <JFXPasswordField fx:id="password" promptText="Password" />

            <JFXPasswordField fx:id="newPassword" promptText="Password" />

            <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>

            <JFXButton styleClass="button-raised" fx:id="update">Update</JFXButton>
        </VBox>
        <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>
    </VBox>


</fx:root>
